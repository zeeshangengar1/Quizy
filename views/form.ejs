<%-include("partials/header.ejs")%>
<div class="container form_div text-center">
    <div class="row  text-center m-2">

        <form action="/" method="POST">
            <div class="row text-center m-2 mb-5">
                <h1>Play an interesting quiz!</h1>
            </div>
            <div class="container">
                <div class="row justify-content-center text-center m-2">
                    <input required type="number" min="1" max="50" name="numb"  class="inp" id="" placeholder="Enter Number of Questions(less than50)">
                </div>
            <div class="row justify-content-center text-center m-2">
                <select class="inp" required name="cat" id="">
                    <option value="20">Mythology</option>
                    <option value="9">General Knowledge</option>
                    <option value="19">Maths</option>
                    <option value="18">Computers</option>
                </select>
            </div>
          <div class="row justify-content-center text-center m-2">
            <select class="inp" required name="diff" id="">
                <option value="easy">Easy</option>
                <option value="medium">Medium</option>
                <option value="hard">Hard</option>
                <!-- <option value="audi">Audi</option> -->
            </select>
          </div>
          <div class="row text-center justify-content-center m-2">
         
            <button type="submit" class="form_submit">Start</button>
          </div>
            </div>
  
      
        </form>

    </div>

</div>


<%-include("partials/footer.ejs")%>
